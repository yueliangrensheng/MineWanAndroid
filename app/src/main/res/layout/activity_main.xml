<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="netAvailable"
            type="Boolean" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_view"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/wan_navigation"
            tools:context=".ui.activity.MainActivity" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/netStateBarMargin"
            android:background="@color/half_red"
            android:drawableLeft="@mipmap/ic_error_18dp"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/net_disconnected"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="@{netAvailable?View.GONE:View.VISIBLE}" />
    </FrameLayout>
</layout>